package trianpprojec;
import java.util.Scanner;

public class count {
	public static void main(String[]args)
	{
		int smallcount=0;
		int capscount=0;
		int numcount=0;
		int specialcount=0;
		
		Scanner ec=new Scanner(System.in);
		System.out.println("Enter your paragraph: ");
		String s=ec.nextLine();
		for(int i=0;i<s.length();i++)
		{
			char ch=s.charAt(i);
			if(ch>='a' && ch<='z')
			{
				smallcount++;
			}
				
			else if(ch>='A' && ch<='Z')
			{
				 capscount++;
			}
			else if(ch>='0'&& ch<='9')
			{
				numcount++;
			}
			else
			{
				specialcount++;
			}
		}System.out.println("The small letter count:"+smallcount);
		System.out.println("The caps letter count:"+capscount);
		System.out.println("The special character count:"+specialcount);
	}

}
package trianpprojec;
import java.util.Scanner;

public class count {
	public static void main(String[]args)
	{
		int smallcount=0;
		int capscount=0;
		int numcount=0;
		int specialcount=0;
		
		Scanner ec=new Scanner(System.in);
		System.out.println("Enter your paragraph: ");
		String s=ec.nextLine();
		for(int i=0;i<s.length();i++)
		{
			char ch=s.charAt(i);
			if(ch>='a' && ch<='z')
			{
				smallcount++;
			}
				
			else if(ch>='A' && ch<='Z')
			{
				 capscount++;
			}
			else if(ch>='0'&& ch<='9')
			{
				numcount++;
			}
			else
			{
				specialcount++;
			}
		}System.out.println("The small letter count:"+smallcount);
		System.out.println("The caps letter count:"+capscount);
		System.out.println("The special character count:"+specialcount);
	}

}
