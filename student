package testing;
import java.util.Scanner;
import java.io.File;
import java.io.IOException;
import java.io.FileWriter;

public class studentdata {
public static void main(String[]args)

{
	File file=new File("Students.txt");
	Scanner rc=new Scanner(System.in);
	try
	{
		
		if(file.createNewFile())
		{
			System.out.println("File is created"+file.getName());
			
		}else
		{
			System.out.println("File is already exits");
		}FileWriter writer=new FileWriter("Studentdet.txt");
		System.out.println("Enter your name:");
		String name=rc.next();
		System.out.println("Enter your age");
		
		String age=rc.next();
		System.out.println("Enter other details");
		String detail=rc.next();

		writer.close();
		Scanner reader=new Scanner(file);
		while(reader.hasNextLine()) 
		{
			String data=reader.next();
			System.out.println(data);
		}reader.close();
		rc.nextLine();
		System.out.println("Do you want to delete file?(yes/no)");
		String ans=rc.next();
		if(ans.equalsIgnoreCase("Yes"))
		{
		if(file.delete())
		{
			System.out.println("File Deleted:"+file.getName());
		}else {
			System.out.println("Failed to delete");
		}
		}else
		{
			System.out.println("Okay file is not deleted");
		}
		
			
	}catch(IOException e)
	{
		System.out.println("Error occured");
		e.printStackTrace();
	}
}
}
