package testing;

public class arraysum {
	
		public static void main(String[]args)
		{
			int sum=0;
			int average;
			int n[]=new int[7];
			n[0]=22;
			n[1]=44;
			n[2]=34;
			n[3]=46;
			n[4]=54;
			n[5]=66;
			n[6]=32;
			for(int i=0;i<n.length;i++)
			{
				sum=sum+n[i];
				System.out.println("The sum is: "+sum);
				
				
				
				average=sum/n.length;
				System.out.println("The Average: "+average);
			}
			
		}
}
